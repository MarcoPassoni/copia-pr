<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aura - Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" type="image/x-icon" sizes="32x32" href="/img/favicon.ico">
  <style>
    /* ===== AURA COLOR PALETTE ===== */
    :root {
      --ecstasy: #f76c1c;
      --energy-yellow: #fad760;
      --yellow-orange: #f9aa43;
      --coral: #ff8f49;
      --casablanca: #f9ba4d;
      --crusta: #f7872e;
      --saffron-mango: #fac957;
      --sea-buckthorn: #f89838;
      
      /* Colori di supporto */
      --white: #ffffff;
      --light-bg: #fff8f0;
      --text-dark: #2d2416;
      --text-gray: #6b5d4f;
      --shadow: rgba(247, 108, 28, 0.15);
      --shadow-strong: rgba(247, 108, 28, 0.3);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, var(--ecstasy) 0%, var(--crusta) 50%, var(--sea-buckthorn) 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      position: relative;
      overflow: hidden;
    }
    
    /* Elementi decorativi di sfondo */
    body::before {
      content: '';
      position: absolute;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(250, 215, 96, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      top: -200px;
      right: -200px;
      animation: float 20s infinite ease-in-out;
    }
    
    body::after {
      content: '';
      position: absolute;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(249, 170, 67, 0.15) 0%, transparent 70%);
      border-radius: 50%;
      bottom: -150px;
      left: -150px;
      animation: float 15s infinite ease-in-out reverse;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      33% { transform: translate(30px, -30px) rotate(120deg); }
      66% { transform: translate(-20px, 20px) rotate(240deg); }
    }
    
    .login-container {
      background: var(--white);
      border-radius: 24px;
      box-shadow: 0 20px 60px var(--shadow-strong);
      padding: 3rem 2.5rem;
      width: 100%;
      max-width: 440px;
      position: relative;
      z-index: 1;
      animation: slideUp 0.6s ease-out;
    }
    
    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Logo/Brand */
    .brand-section {
      text-align: center;
      margin-bottom: 2.5rem;
    }
    
    .brand-logo {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, var(--ecstasy), var(--coral));
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      box-shadow: 0 8px 24px var(--shadow);
      animation: pulse 3s infinite ease-in-out;
    }
    
    @keyframes pulse {
      0%, 100% { transform: scale(1); box-shadow: 0 8px 24px var(--shadow); }
      50% { transform: scale(1.05); box-shadow: 0 12px 32px var(--shadow-strong); }
    }
    
    .brand-logo i {
      font-size: 2.5rem;
      color: var(--white);
      filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    }
    
    .brand-title {
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, var(--ecstasy), var(--sea-buckthorn));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      letter-spacing: -0.5px;
    }
    
    .brand-subtitle {
      color: var(--text-gray);
      font-size: 0.95rem;
      font-weight: 500;
    }
    
    /* Form Styles */
    form {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }
    
    .input-group {
      position: relative;
    }
    
    .input-icon {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-gray);
      font-size: 1.1rem;
      transition: color 0.3s ease;
      pointer-events: none;
    }
    
    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 1.1rem 1.25rem 1.1rem 3.5rem;
      border: 2px solid #e8e4df;
      border-radius: 14px;
      font-size: 1rem;
      color: var(--text-dark);
      background: var(--light-bg);
      transition: all 0.3s ease;
      font-family: inherit;
    }
    
    input[type="text"]:focus,
    input[type="password"]:focus {
      outline: none;
      border-color: var(--ecstasy);
      background: var(--white);
      box-shadow: 0 4px 16px var(--shadow);
    }
    
    input[type="text"]:focus + .input-icon,
    input[type="password"]:focus + .input-icon {
      color: var(--ecstasy);
    }
    
    input::placeholder {
      color: #b5a99a;
    }
    
    /* Password Toggle */
    .password-wrapper {
      position: relative;
    }
    
    .password-toggle {
      position: absolute;
      right: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: var(--text-gray);
      cursor: pointer;
      font-size: 1.1rem;
      padding: 0.5rem;
      transition: color 0.3s ease;
      z-index: 2;
    }
    
    .password-toggle:hover {
      color: var(--ecstasy);
    }
    
    /* Submit Button */
    button[type="submit"] {
      background: linear-gradient(135deg, var(--ecstasy), var(--coral));
      color: var(--white);
      border: none;
      border-radius: 14px;
      padding: 1.2rem;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 6px 20px var(--shadow);
      margin-top: 0.5rem;
      position: relative;
      overflow: hidden;
    }
    
    button[type="submit"]::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.5s ease;
    }
    
    button[type="submit"]:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 28px var(--shadow-strong);
    }
    
    button[type="submit"]:hover::before {
      left: 100%;
    }
    
    button[type="submit"]:active {
      transform: translateY(0);
    }
    
    /* Error Message */
    .error {
      background: linear-gradient(135deg, #ff4444, #ff6b6b);
      color: var(--white);
      padding: 1rem 1.25rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: 0 4px 12px rgba(255, 68, 68, 0.3);
      animation: shake 0.5s ease-in-out;
    }
    
    .error::before {
      content: '\f06a';
      font-family: 'Font Awesome 6 Free';
      font-weight: 900;
      font-size: 1.2rem;
    }
    
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-10px); }
      75% { transform: translateX(10px); }
    }
    
    /* Footer */
    .login-footer {
      margin-top: 2rem;
      text-align: center;
      color: var(--text-gray);
      font-size: 0.85rem;
    }
    
    .login-footer a {
      color: var(--ecstasy);
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }
    
    .login-footer a:hover {
      color: var(--crusta);
      text-decoration: underline;
    }
    
    /* Responsive */
    @media (max-width: 480px) {
      .login-container {
        padding: 2rem 1.5rem;
      }
      
      .brand-logo {
        width: 70px;
        height: 70px;
      }
      
      .brand-logo i {
        font-size: 2rem;
      }
      
      .brand-title {
        font-size: 2rem;
      }
      
      input[type="text"],
      input[type="password"] {
        padding: 1rem 1rem 1rem 3rem;
        font-size: 0.95rem;
      }
      
      .input-icon {
        left: 1rem;
        font-size: 1rem;
      }
      
      button[type="submit"] {
        padding: 1.1rem;
        font-size: 1rem;
      }
    }
    
    /* Loading animation */
    .loading {
      pointer-events: none;
      opacity: 0.7;
      position: relative;
    }
    
    .loading::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 20px;
      height: 20px;
      margin: -10px 0 0 -10px;
      border: 2px solid var(--white);
      border-top-color: transparent;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="login-container">
    <!-- Brand Section -->
    <div class="brand-section">
      <div class="brand-logo">
        <img src="/img/favicon.ico" alt="Aura Logo" style="width:40px; height:40px;">
      </div>
      <h1 class="brand-title">Aura</h1>
      <p class="brand-subtitle">Gestione Team & Prenotazioni</p>
    </div>
    
    <!-- Error Message -->
    <% if (message && message.length) { %>
      <div class="error"><%= message %></div>
    <% } %>
    
    <!-- Login Form -->
    <form method="POST" action="/login" id="loginForm">
      <div class="input-group">
        <input type="text" name="nickname" id="nickname" placeholder="Nickname" required autocomplete="username">
        <i class="fas fa-user input-icon"></i>
      </div>
      
      <div class="input-group password-wrapper">
        <input type="password" name="password" id="password" placeholder="Password" required autocomplete="current-password">
        <i class="fas fa-lock input-icon"></i>
        <button type="button" class="password-toggle" onclick="togglePassword()">
          <i class="fas fa-eye" id="toggleIcon"></i>
        </button>
      </div>
      
      <button type="submit" id="submitBtn">
        <i class="fas fa-sign-in-alt"></i> Accedi
      </button>
    </form>
    
    <!-- Footer -->
    <div class="login-footer">
      <p>Â© 2025 Aura. Tutti i diritti riservati.</p>
    </div>
  </div>
  
  <script>
    // Toggle password visibility
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const toggleIcon = document.getElementById('toggleIcon');
      
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
      }
    }
    
    // Form submit animation
    document.getElementById('loginForm').addEventListener('submit', function(e) {
      const submitBtn = document.getElementById('submitBtn');
      submitBtn.classList.add('loading');
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Accesso in corso...';
    });
    
    // Auto-focus on nickname input
    window.addEventListener('load', function() {
      document.getElementById('nickname').focus();
    });
  </script>
</body>
</html>
