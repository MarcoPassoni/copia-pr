<!-- Page header -->
<div class="page-header">
  <h1>
    <i class="fas fa-clipboard-list"></i>
    Report Dettagliato per Utente
  </h1>
  <p>Gestione pagamenti e gerarchia del team Aura per <%= meseCorrente %></p>
</div>

<!-- Navigation buttons -->
<div class="nav-buttons">
  <a href="/admin/report" class="btn btn-primary">
    <i class="fas fa-clipboard-list"></i>
    <span class="btn-text">Report Pagamenti</span>
  </a>
  <a href="/admin/organigramma" class="btn btn-secondary">
    <i class="fas fa-sitemap"></i>
    <span class="btn-text">Organigramma</span>
  </a>
</div>

<!-- Main content -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-chart-bar"></i>
      Statistiche Generali
    </h2>
  </div>
  
  <!-- Statistiche Generali -->
  <div class="stats-grid">
    <div class="stat-card direct">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-user-tie"></i>
        </div>
        <div class="stat-card-data">
          <h3>PR Diretti</h3>
          <div class="stat-number"><%= statisticheTotali.totalePRDiretti %></div>
          <div class="stat-label">Sotto la tua gestione</div>
        </div>
      </div>
    </div>

    <div class="stat-card total">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-card-data">
          <h3>PR Totali</h3>
          <div class="stat-number"><%= statisticheTotali.totalePRTotali %></div>
          <div class="stat-label">Nell'intera gerarchia</div>
        </div>
      </div>
    </div>

    <div class="stat-card people">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-user-friends"></i>
        </div>
        <div class="stat-card-data">
          <h3>Persone</h3>
          <div class="stat-number"><%= statisticheTotali.totalePersonePortate %></div>
          <div class="stat-label">Portate (diretti)</div>
        </div>
      </div>
    </div>

    <div class="stat-card tables">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-utensils"></i>
        </div>
        <div class="stat-card-data">
          <h3>Tavoli</h3>
          <div class="stat-number"><%= statisticheTotali.totaleTavoli %></div>
          <div class="stat-label">Approvati (diretti)</div>
        </div>
      </div>
    </div>

    <div class="stat-card commissions">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-calculator"></i>
        </div>
        <div class="stat-card-data">
          <h3>Fatturato Totale</h3>
          <div class="stat-number">€<%= (statisticheTotali.totaleFatturatoSottoalberi || 0).toFixed(0) %></div>
          <div class="stat-label">Sottoalberi completi</div>
        </div>
      </div>
    </div>

    <div class="stat-card profit">
      <div class="stat-card-content">
        <div class="stat-card-icon">
          <i class="fas fa-coins"></i>
        </div>
        <div class="stat-card-data">
          <h3>Guadagni Totali</h3>
          <div class="stat-number">€<%= (statisticheTotali.totaleGuadagni || 0).toFixed(2) %></div>
          <div class="stat-label">Netti finali PR diretti</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Hierarchical Report -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-users"></i>
      Report Dettagliato per Utente
    </h2>
    <p class="card-subtitle">Visualizzazione completa della gerarchia e pagamenti</p>
    <p style="font-size: 0.8rem; color: #666;">
      <strong>Debug:</strong> Admin ID: <%= adminId %> | 
      Dati trovati: <%= hierarchyData ? hierarchyData.length : 'undefined' %> |
      PR Diretti: <%= statisticheTotali.totalePRDiretti %>
    </p>
  </div>

  <div class="report-container">
    <% if (!hierarchyData || hierarchyData.length === 0) { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i class="fas fa-user-slash"></i>
        </div>
        <h3>Nessun PR nella tua gerarchia</h3>
        <p>Non ci sono PR che riportano alla tua gestione al momento.</p>
        <p><strong>Debug:</strong> hierarchyData = <%= JSON.stringify(hierarchyData) %></p>
      </div>
    <% } else { %>
      
      <!-- Vista mobile: Cards -->
      <div class="mobile-cards">
        <% hierarchyData.forEach(pr => { %>
          <div class="pr-card <%= pr.puo_pagare ? 'can-pay' : 'read-only' %>" data-level="<%= pr.livello_gerarchia %>">
            <div class="card-header-row">
              <div class="pr-info">
                <div class="pr-name">
                  <span class="level-indicator">
                    <% for(let i = 0; i < pr.livello_gerarchia; i++) { %>
                      <i class="fas fa-angle-right"></i>
                    <% } %>
                  </span>
                  <strong><%= pr.nickname %></strong>
                </div>
                <div class="pr-full-name"><%= pr.nome %> <%= pr.cognome %></div>
              </div>
              <div class="pr-badges">
                <span class="role-badge">PR</span>
                <% if (pr.puo_pagare) { %>
                  <span class="level-badge direct">Diretto</span>
                <% } else { %>
                  <span class="level-badge indirect">Livello <%= pr.livello_gerarchia %></span>
                <% } %>
              </div>
            </div>
            
            <div class="card-details">
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-user-tie"></i>
                    Padre
                  </div>
                  <div class="detail-value">
                    <%= pr.padre_nickname %>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-percent"></i>
                    % Provvigione
                  </div>
                  <div class="detail-value percentage">
                    <%= pr.percentuale_provvigione %>%
                  </div>
                </div>
              </div>
              
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-utensils"></i>
                    Tavoli Diretti
                  </div>
                  <div class="detail-value">
                    <span class="count-badge">
                      <%= pr.tavoli_diretti || 0 %>
                    </span>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-euro-sign"></i>
                    Fatturato Diretto
                  </div>
                  <div class="detail-value revenue">
                    €<%= (pr.fatturato_diretto || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
              
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-chart-line"></i>
                    Fatturato Sottoalbero
                  </div>
                  <div class="detail-value revenue large">
                    €<%= (pr.fatturato_sottoalbero || 0).toFixed(2) %>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-calculator"></i>
                    Provvigione Lorda
                  </div>
                  <div class="detail-value revenue">
                    €<%= (pr.provvigione_lorda || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
              
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-arrow-down"></i>
                    Pagamenti ai Figli
                  </div>
                  <div class="detail-value" style="color: #dc2626;">
                    €<%= (pr.pagamenti_ai_figli || 0).toFixed(2) %>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-hand-holding-usd"></i>
                    Provv. Netta Ricorsiva
                  </div>
                  <div class="detail-value revenue">
                    €<%= (pr.provvigione_netta_ricorsiva || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
              
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-coins"></i>
                    Provv. sui Propri Tavoli
                  </div>
                  <div class="detail-value revenue">
                    €<%= (pr.provvigione_diretta || 0).toFixed(2) %>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-trophy"></i>
                    <strong>GUADAGNO TOTALE</strong>
                  </div>
                  <div class="detail-value revenue large" style="font-weight: 800; color: #059669;">
                    €<%= (pr.guadagno_totale || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
              
              <div class="detail-row">
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-key"></i>
                    Poteri
                  </div>
                  <div class="detail-value">
                    <% if (pr.poteri) { %>
                      <span class="powers-badge enabled">
                        <i class="fas fa-check"></i> SI
                      </span>
                    <% } else { %>
                      <span class="powers-badge disabled">
                        <i class="fas fa-times"></i> NO
                      </span>
                    <% } %>
                  </div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">
                    <i class="fas fa-users"></i>
                    Persone Dirette
                  </div>
                  <div class="detail-value">
                    <span class="count-badge">
                      <%= pr.persone_dirette || 0 %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="card-footer">
              <% if (pr.puo_pagare && (pr.guadagno_totale || 0) > 0) { %>
                <button class="btn btn-success pay-btn" data-pr-id="<%= pr.id %>" data-nickname="<%= pr.nickname %>" data-amount="<%= (pr.guadagno_totale || 0).toFixed(2) %>">
                  <i class="fas fa-euro-sign"></i>
                  PAGA €<%= (pr.guadagno_totale || 0).toFixed(2) %>
                </button>
              <% } else if (pr.puo_pagare) { %>
                <span class="status-badge paid">
                  <i class="fas fa-check-circle"></i>
                  A posto
                </span>
              <% } else { %>
                <span class="status-badge readonly">
                  <i class="fas fa-eye"></i>
                  Solo vista
                </span>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Vista desktop: Tabella -->
      <div class="desktop-table">
        <div class="table-responsive">
          <div class="table-wrapper">
            <table class="report-table data-table">
            <thead>
              <tr>
                <th><i class="fas fa-user"></i> Utente</th>
                <th><i class="fas fa-user-tie"></i> Padre</th>
                <th><i class="fas fa-percent"></i> %</th>
                <th><i class="fas fa-utensils"></i> Tavoli Dir.</th>
                <th><i class="fas fa-euro-sign"></i> Fatturato Dir.</th>
                <th><i class="fas fa-chart-line"></i> Fatt. Sottoalbero</th>
                <th><i class="fas fa-calculator"></i> Provv. Lorda</th>
                <th><i class="fas fa-arrow-down"></i> Paga ai Figli</th>
                <th><i class="fas fa-hand-holding-usd"></i> Provv. Netta</th>
                <th><i class="fas fa-coins"></i> Provv. Diretta</th>
                <th><i class="fas fa-trophy"></i> GUADAGNO TOT.</th>
                <th><i class="fas fa-cogs"></i> Azioni</th>
              </tr>
            </thead>
            <tbody>
              <% hierarchyData.forEach(pr => { %>
                <tr class="<%= pr.puo_pagare ? 'can-pay-row' : 'read-only-row' %>" data-level="<%= pr.livello_gerarchia %>">
                  <td class="user-cell">
                    <div class="user-info">
                      <span class="level-indicator">
                        <% for(let i = 0; i < pr.livello_gerarchia; i++) { %>
                          <i class="fas fa-angle-right"></i>
                        <% } %>
                      </span>
                      <div class="user-details">
                        <strong class="user-name"><%= pr.nickname %></strong>
                        <small class="user-full-name"><%= pr.nome %> <%= pr.cognome %></small>
                        <% if (pr.puo_pagare) { %>
                          <span class="level-badge direct">Diretto</span>
                        <% } else { %>
                          <span class="level-badge indirect">Lv.<%= pr.livello_gerarchia %></span>
                        <% } %>
                      </div>
                    </div>
                  </td>
                  
                  <td class="parent-cell">
                    <span class="parent-name"><%= pr.padre_nickname %></span>
                  </td>
                  
                  <td class="percentage-cell">
                    <span class="percentage-value"><%= pr.percentuale_provvigione %>%</span>
                  </td>
                  
                  <td class="count-cell">
                    <div class="stat-value">
                      <i class="fas fa-utensils"></i>
                      <span class="count"><%= pr.tavoli_diretti || 0 %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value">
                      <span class="amount">€<%= (pr.fatturato_diretto || 0).toFixed(0) %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value">
                      <span class="amount large">€<%= (pr.fatturato_sottoalbero || 0).toFixed(0) %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value">
                      <span class="amount">€<%= (pr.provvigione_lorda || 0).toFixed(2) %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value" style="color: #dc2626;">
                      <span class="amount">€<%= (pr.pagamenti_ai_figli || 0).toFixed(2) %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value">
                      <span class="amount">€<%= (pr.provvigione_netta_ricorsiva || 0).toFixed(2) %></span>
                    </div>
                  </td>
                  
                  <td class="commission-cell">
                    <div class="commission-value">
                      <span class="amount">€<%= (pr.provvigione_diretta || 0).toFixed(2) %></span>
                    </div>
                  </td>
                  
                  <td class="total-cell">
                    <div class="total-value">
                      <span class="amount large" style="font-weight: 800; color: #059669;">€<%= (pr.guadagno_totale || 0).toFixed(2) %></span>
                    </div>
                  </td>
                  
                  <td class="actions-cell">
                    <% if (pr.puo_pagare && (pr.guadagno_totale || 0) > 0) { %>
                      <button class="btn btn-success btn-sm pay-btn" data-pr-id="<%= pr.id %>" data-nickname="<%= pr.nickname %>" data-amount="<%= (pr.guadagno_totale || 0).toFixed(2) %>">
                        <i class="fas fa-euro-sign"></i>
                        PAGA
                      </button>
                    <% } else if (pr.puo_pagare) { %>
                      <span class="status-badge paid">
                        <i class="fas fa-check-circle"></i>
                        A posto
                      </span>
                    <% } else { %>
                      <span class="status-badge readonly">
                        <i class="fas fa-eye"></i>
                        Solo vista
                      </span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- Modal per conferma pagamento -->
<div id="paymentModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>
        <i class="fas fa-euro-sign"></i>
        Conferma Pagamento Provvigioni
      </h2>
      <span class="close">&times;</span>
    </div>
    
    <div class="modal-body">
      <div class="payment-info">
        <p>Stai per registrare il pagamento delle provvigioni per:</p>
        <div class="pr-details">
          <strong id="payment-pr-name"></strong>
          <span class="amount-to-pay" id="payment-amount"></span>
        </div>
        <p class="warning-text">
          <i class="fas fa-exclamation-triangle"></i>
          Questa azione registrerà il pagamento e azzererà le provvigioni da pagare per questo PR.
        </p>
      </div>
      
      <form id="paymentForm">
        <input type="hidden" id="payment-pr-id" name="prId">
        <input type="hidden" id="payment-amount-value" name="amount">
        
        <div class="form-group">
          <label for="payment-notes">
            <i class="fas fa-sticky-note"></i>
            Note pagamento (opzionale)
          </label>
          <textarea id="payment-notes" name="notes" rows="3" placeholder="Inserisci eventuali note sul pagamento..."></textarea>
        </div>
      </form>
    </div>
    
    <div class="modal-footer">
      <button type="button" class="btn btn-success confirm-payment-btn">
        <i class="fas fa-check"></i>
        Conferma Pagamento
      </button>
      <button type="button" class="btn btn-secondary cancel-payment-btn">
        <i class="fas fa-times"></i>
        Annulla
      </button>
    </div>
  </div>
</div>

