                        <button class="btn btn-primary-mobile" 
                                onclick="visualizzaModifiche('<%= r.id %>')"
                                title="Visualizza modifiche">
                          <i class="fas fa-eye"></i>
                          Dettagli
                        </button>
                        <button class="btn btn-success-mobile" 
