                          <i class="fas fa-check"></i>
                          Approva
                        </button>
                      <% } else { %>
                        <button class="btn btn-primary-mobile" 
                                onclick="visualizzaDettagli('<%= r.id %>')"
                                title="Visualizza dettagli">
                          <i class="fas fa-eye"></i>
                          Visualizza
                        </button>
                      <% } %>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          <% } %>
