      const statusFilter = document.getElementById('statusFilter').value;
      const prFilter = document.getElementById('prFilter').value;
      
      // Filter mobile approvazioni cards
      const mobileCards = document.querySelectorAll('.approvazioni-card');
      mobileCards.forEach(card => {
        const cardStatus = card.dataset.status;
        const cardPr = card.dataset.pr;
        
        const statusMatch = !statusFilter || cardStatus === statusFilter;
        const prMatch = !prFilter || cardPr === prFilter;
        
        if (statusMatch && prMatch) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
      
      // Filter original request cards (if they exist)
      const requestCards = document.querySelectorAll('.request-card');
      requestCards.forEach(card => {
        const cardStatus = card.dataset.status;
        const cardPr = card.dataset.pr;
        
        const statusMatch = !statusFilter || cardStatus === statusFilter;
        const prMatch = !prFilter || cardPr === prFilter;
        
        if (statusMatch && prMatch) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
      
      // Filter desktop table rows
      const tableRows = document.querySelectorAll('#requestsTableBody tr');
      tableRows.forEach(row => {
        const rowStatus = row.dataset.status;
        const rowPr = row.dataset.pr;
        
        const statusMatch = !statusFilter || rowStatus === statusFilter;
        const prMatch = !prFilter || rowPr === prFilter;
        
        if (statusMatch && prMatch) {
          row.style.display = 'table-row';
