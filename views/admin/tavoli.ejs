<!-- Page header -->
<div class="page-header">
  <h1>
    <i class="fas fa-utensils"></i>
    Tavoli Approvati
  </h1>
  <p>Panoramica completa dei tavoli confermati e gestiti</p>
</div>

<!-- Stats cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon total">
      <i class="fas fa-table"></i>
    </div>
    <div class="stat-content">
      <div class="stat-number"><%= tavoli.length %></div>
      <div class="stat-label">Tavoli confermati</div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon admin">
      <i class="fas fa-euro-sign"></i>
    </div>
    <div class="stat-content">
      <div class="stat-number">â‚¬ <%= tavoli.reduce((sum, t) => sum + parseFloat(t.spesa_prevista || 0), 0).toFixed(2) %></div>
      <div class="stat-label">Fatturato generato</div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon pr">
      <i class="fas fa-users"></i>
    </div>
    <div class="stat-content">
      <div class="stat-number"><%= tavoli.reduce((sum, t) => sum + parseInt(t.numero_persone || 0), 0) %></div>
      <div class="stat-label">Persone servite</div>
    </div>
  </div>

  <div class="stat-card">
    <div class="stat-icon pre-admin">
      <i class="fas fa-calendar-day"></i>
    </div>
    <div class="stat-content">
      <div class="stat-number"><%= tavoli.filter(t => t.data === new Date().toISOString().split('T')[0]).length %></div>
      <div class="stat-label">Tavoli di oggi</div>
    </div>
  </div>
</div>

<!-- Filtri -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-filter"></i>
      Filtra per data
    </h2>
  </div>
  <form method="get" action="/admin/tavoli" class="filter-form">
    <div class="filter-container">
      <div class="filter-group">
        <label for="data-filter">
          <i class="fas fa-calendar"></i>
          Seleziona data
        </label>
        <input type="date" id="data-filter" name="data" class="form-control" value="<%= filtroData || '' %>">
      </div>
      <div class="filter-actions">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i>
          Cerca
        </button>
        <% if (filtroData) { %>
          <a href="/admin/tavoli" class="btn btn-secondary">
            <i class="fas fa-times"></i>
            Reset
          </a>
        <% } %>
      </div>
    </div>
  </form>
</div>

<!-- Lista tavoli -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-list"></i>
      Lista Tavoli (<%= tavoli.length %>)
    </h2>
    <button type="button" class="btn btn-info" onclick="exportToCSV()">
      <i class="fas fa-download"></i>
      <span class="btn-text">Esporta CSV</span>
    </button>
  </div>

  <% if (tavoli.length === 0) { %>
    <div class="empty-state">
      <div class="empty-icon">
        <i class="fas fa-utensils"></i>
      </div>
      <h3>Nessun tavolo trovato</h3>
      <p>Non ci sono tavoli approvati per i criteri selezionati.</p>
      <% if (filtroData) { %>
        <a href="/admin/tavoli" class="btn btn-primary">
          <i class="fas fa-list"></i>
          Vedi tutti i tavoli
        </a>
      <% } %>
    </div>
  <% } else { %>
    <!-- Vista mobile: Cards -->
    <div class="mobile-cards">
      <% tavoli.forEach(tavolo => { %>
        <div class="table-card <%= tavolo.modificata ? 'modified' : '' %>">
          <div class="card-header-row">
            <div class="table-name">
              <i class="fas fa-table"></i>
              <strong><%= tavolo.nome_tavolo %></strong>
            </div>
            <div class="table-date">
              <%= new Date(tavolo.data).toLocaleDateString('it-IT', { 
                day: 'numeric', 
                month: 'short' 
              }) %>
            </div>
          </div>
          
          <div class="card-details">
            <div class="detail-row">
              <div class="detail-item">
                <span class="detail-label">
                  <i class="fas fa-user-tie"></i>
                  PR
                </span>
                <span class="detail-value pr-info">
                  <strong><%= tavolo.pr_nickname %></strong>
                  <small><%= tavolo.pr_nome %> <%= tavolo.pr_cognome %></small>
                </span>
              </div>
            </div>
            
            <div class="detail-row">
              <div class="detail-item">
                <span class="detail-label">
                  <i class="fas fa-users"></i>
                  Persone
                </span>
                <span class="detail-value">
                  <span class="badge-count"><%= tavolo.numero_persone %></span>
                </span>
              </div>
              <div class="detail-item">
                <span class="detail-label">
                  <i class="fas fa-euro-sign"></i>
                  Spesa
                </span>
                <span class="detail-value revenue">
                  â‚¬ <%= parseFloat(tavolo.spesa_prevista || 0).toFixed(2) %>
                </span>
              </div>
            </div>

            <% if (tavolo.omaggi && tavolo.omaggi.trim() !== "") { %>
              <div class="detail-row">
                <div class="detail-item full-width">
                  <span class="detail-label">
                    <i class="fas fa-gift"></i>
                    Omaggi
                  </span>
                  <div class="omaggi-list">
                    <% tavolo.omaggi.split(',').forEach(function(omaggio) { %>
                      <span class="omaggio-tag"><%= omaggio.trim() %></span>
                    <% }) %>
                  </div>
                </div>
              </div>
            <% } %>

            <% if (tavolo.note_tavolo && tavolo.note_tavolo.trim() !== "") { %>
              <div class="detail-row">
                <div class="detail-item full-width">
                  <span class="detail-label">
                    <i class="fas fa-sticky-note"></i>
                    Note
                  </span>
                  <span class="detail-value note-text">
                    <%= tavolo.note_tavolo %>
                  </span>
                </div>
              </div>
            <% } %>

            <div class="card-footer">
              <div class="status-badges">
                <span class="status-badge approved">
                  <i class="fas fa-check"></i>
                  Approvato
                </span>
                <% if (tavolo.modificata) { %>
                  <span class="status-badge modified">
                    <i class="fas fa-edit"></i>
                    Modificato
                  </span>
                <% } %>
              </div>
            </div>

            <% if (tavolo.modificata && tavolo.note_modifiche) { %>
              <div class="modification-note">
                <i class="fas fa-edit"></i>
                <strong>Modificato da <%= tavolo.modificato_da_nickname || 'Admin' %>:</strong>
                <span><%= tavolo.note_modifiche %></span>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Vista desktop: Tabella -->
    <div class="desktop-table">
      <div class="table-responsive">
        <div class="table-wrapper">
          <table class="admin-table tavoli-table data-table">
          <thead>
            <tr>
              <th><i class="fas fa-calendar"></i> Data</th>
              <th><i class="fas fa-table"></i> Tavolo</th>
              <th><i class="fas fa-user-tie"></i> PR</th>
              <th><i class="fas fa-users"></i> Persone</th>
              <th><i class="fas fa-euro-sign"></i> Spesa</th>
              <th><i class="fas fa-gift"></i> Omaggi</th>
              <th><i class="fas fa-sticky-note"></i> Note</th>
              <th><i class="fas fa-flag"></i> Stato</th>
            </tr>
          </thead>
          <tbody>
            <% tavoli.forEach(tavolo => { %>
              <tr class="<%= tavolo.modificata ? 'modified-row' : '' %>">
                <td class="date-cell">
                  <%= new Date(tavolo.data).toLocaleDateString('it-IT', { 
                    weekday: 'short', 
                    day: 'numeric', 
                    month: 'short' 
                  }) %>
                </td>
                <td class="name-cell">
                  <strong><%= tavolo.nome_tavolo %></strong>
                </td>
                <td class="pr-cell">
                  <div class="pr-info">
                    <strong><%= tavolo.pr_nickname %></strong>
                    <small><%= tavolo.pr_nome %> <%= tavolo.pr_cognome %></small>
                  </div>
                </td>
                <td class="count-cell">
                  <span class="count-badge">
                    <i class="fas fa-users"></i>
                    <%= tavolo.numero_persone %>
                  </span>
                </td>
                <td class="revenue-cell">
                  <span class="revenue-amount">
                    â‚¬ <%= parseFloat(tavolo.spesa_prevista || 0).toFixed(2) %>
                  </span>
                </td>
                <td class="omaggi-cell">
                  <% if (tavolo.omaggi && tavolo.omaggi.trim() !== "") { %>
                    <div class="omaggi-list">
                      <% tavolo.omaggi.split(',').forEach(function(omaggio) { %>
                        <span class="omaggio-tag"><%= omaggio.trim() %></span>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <span class="no-data">â€”</span>
                  <% } %>
                </td>
                <td class="note-cell">
                  <% if (tavolo.note_tavolo && tavolo.note_tavolo.trim() !== "") { %>
                    <span class="note-text"><%= tavolo.note_tavolo %></span>
                  <% } else { %>
                    <span class="no-data">â€”</span>
                  <% } %>
                  <% if (tavolo.modificata && tavolo.note_modifiche) { %>
                    <div class="modification-note">
                      <i class="fas fa-edit"></i>
                      <strong>Modificato:</strong> <%= tavolo.note_modifiche %>
                    </div>
                  <% } %>
                </td>
                <td class="status-cell">
                  <div class="status-badges">
                    <span class="status-badge approved">
                      <i class="fas fa-check"></i>
                      Approvato
                    </span>
                    <% if (tavolo.modificata) { %>
                      <span class="status-badge modified">
                        <i class="fas fa-edit"></i>
                        Modificato
                      </span>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        </div>
      </div>

      <!-- Mobile Card Layout (shown only on mobile) -->
      <div class="mobile-data-cards tavoli-cards">
        <% tavoli.forEach(tavolo => { %>
          <div class="mobile-data-card tavoli-card <%= tavolo.modificata ? 'modified-card' : '' %>" 
               data-date="<%= tavolo.data %>" 
               data-pr="<%= tavolo.pr_nickname %>">
            
            <div class="card-header">
              <div class="card-title">
                <div class="date-badge">
                  <i class="fas fa-calendar"></i>
                  <%= new Date(tavolo.data).toLocaleDateString('it-IT', { 
                    weekday: 'short', 
                    day: 'numeric', 
                    month: 'short' 
                  }) %>
                </div>
                <div class="table-info">
                  <div class="table-name">
                    <i class="fas fa-table"></i>
                    <%= tavolo.nome_tavolo %>
                  </div>
                  <div class="pr-name">
                    <i class="fas fa-user-tie"></i>
                    <%= tavolo.pr_nickname %>
                  </div>
                </div>
              </div>
              <% if (tavolo.modificata) { %>
                <div class="modification-badge">
                  <i class="fas fa-edit"></i>
                  Modificato
                </div>
              <% } %>
            </div>
            
            <div class="card-body">
              <div class="field">
                <div class="field-label">PR Responsabile</div>
                <div class="field-value">
                  <div class="pr-full-info">
                    <strong><%= tavolo.pr_nickname %></strong>
                    <small><%= tavolo.pr_nome %> <%= tavolo.pr_cognome %></small>
                  </div>
                </div>
              </div>
              
              <div class="field">
                <div class="field-label">Persone</div>
                <div class="field-value">
                  <div class="count-badge">
                    <i class="fas fa-users"></i>
                    <%= tavolo.numero_persone %>
                  </div>
                </div>
              </div>
              
              <div class="field">
                <div class="field-label">Spesa Prevista</div>
                <div class="field-value">
                  <div class="revenue-amount">
                    <i class="fas fa-euro-sign"></i>
                    â‚¬ <%= parseFloat(tavolo.spesa_prevista || 0).toFixed(2) %>
                  </div>
                </div>
              </div>
              
              <div class="field field-full-width">
                <div class="field-label">Omaggi</div>
                <div class="field-value">
                  <% if (tavolo.omaggi && tavolo.omaggi.trim() !== "") { %>
                    <div class="omaggi-list">
                      <% tavolo.omaggi.split(',').forEach(function(omaggio) { %>
                        <span class="omaggio-tag">
                          <i class="fas fa-gift"></i>
                          <%= omaggio.trim() %>
                        </span>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <span class="no-data">
                      <i class="fas fa-minus"></i>
                      Nessun omaggio
                    </span>
                  <% } %>
                </div>
              </div>
              
              <% if (tavolo.note_tavolo || (tavolo.modificata && tavolo.note_modifiche)) { %>
              <div class="field field-full-width">
                <div class="field-label">Note</div>
                <div class="field-value">
                  <% if (tavolo.note_tavolo) { %>
                    <div class="note-item">
                      <i class="fas fa-sticky-note"></i>
                      <span class="note-text"><%= tavolo.note_tavolo %></span>
                    </div>
                  <% } %>
                  <% if (tavolo.modificata && tavolo.note_modifiche) { %>
                    <div class="note-item modification">
                      <i class="fas fa-edit"></i>
                      <span class="note-text">Modifica: <%= tavolo.note_modifiche %></span>
                    </div>
                  <% } %>
                </div>
              </div>
              <% } %>
              
              <div class="field field-full-width">
                <div class="field-label">Stato</div>
                <div class="field-value">
                  <div class="status-badges">
                    <div class="status-badge confirmed">
                      <i class="fas fa-check-circle"></i>
                      Confermato
                    </div>
                    <% if (tavolo.modificata) { %>
                      <div class="status-badge modified">
                        <i class="fas fa-edit"></i>
                        Con Modifiche
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>
</div>

