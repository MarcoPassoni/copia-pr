          <div class="table-wrapper">
            <table class="staff-table data-table" id="staffTable">
            <thead>
              <tr>
                <th class="th-id">
                  <i class="fas fa-hashtag"></i>
                  ID
                </th>
                <th class="th-nickname">
                  <i class="fas fa-user-tag"></i>
                  Nickname
                </th>
                <th class="th-role">
                  <i class="fas fa-user-shield"></i>
                  Ruolo
                </th>
                <th class="th-name">
                  <i class="fas fa-id-card"></i>
                  Nome Completo
                </th>
                <th class="th-phone">
                  <i class="fas fa-phone"></i>
                  Telefono
                </th>
                <th class="th-percentage">
                  <i class="fas fa-percentage"></i>
                  Provvigione
                </th>
                <th class="th-powers">
                  <i class="fas fa-crown"></i>
                  Poteri
                </th>
                <th class="th-parent">
                  <i class="fas fa-sitemap"></i>
                  Supervisore
                </th>
                <th class="th-subordinates">
