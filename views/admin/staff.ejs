                      <button class="action-btn btn-edit edit-btn" 
                              data-id="<%= u.id %>"
                              title="Modifica utente">
                        <i class="fas fa-edit"></i>
                        <span>Modifica</span>
                      </button>
                      <% if (u.ruolo !== 'admin' || utenti.filter(admin => admin.ruolo === 'admin').length > 1) { %>
                        <button type="button" class="action-btn btn-delete"
                          data-id="<%= u.id %>" data-nickname="<%= u.nickname %>" data-ruolo="<%= u.ruolo %>"
                          title="Elimina utente">
                          <i class="fas fa-trash"></i>
                          <span>Elimina</span>
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          </div>
        </div>
          
        <div class="table-footer">
            <div class="table-info">
              <i class="fas fa-info-circle"></i>
              Visualizzati <span id="visibleRows"><%= utenti.length %></span> di <span id="totalRows"><%= utenti.length %></span> membri
            </div>
          </div>
        </div>

        <!-- Mobile Card Layout (shown only on mobile) -->
        <div class="mobile-data-cards">
          <% utenti.forEach(u => { %>
            <div class="mobile-data-card staff-card" data-role="<%= u.ruolo %>" data-search="<%= u.nickname %> <%= u.nome %> <%= u.cognome %>">
              <div class="card-header">
                <div class="card-title">
                  <div class="user-avatar">
                    <i class="fas fa-user"></i>
                  </div>
                  <div class="user-info">
                    <div class="nickname-text"><%= u.nickname %></div>
                    <div class="role-badge role-<%= u.ruolo %>">
                      <% if (u.ruolo === 'admin') { %>
                        <i class="fas fa-crown"></i> ADMIN
                      <% } else if (u.ruolo === 'pre_admin') { %>
                        <i class="fas fa-user-cog"></i> PRE-ADMIN
                      <% } else { %>
                        <i class="fas fa-user-tie"></i> PR
                      <% } %>
                    </div>
                  </div>
                </div>
                <div class="id-badge">ID: <%= u.id %></div>
              </div>
              
              <div class="card-body">
                <div class="field">
                  <div class="field-label">Nome Completo</div>
                  <div class="field-value"><%= u.nome %> <%= u.cognome %></div>
                </div>
                
                <div class="field">
                  <div class="field-label">Telefono</div>
                  <div class="field-value">
                    <% if (u.numero_telefono) { %>
                      <a href="tel:<%= u.numero_telefono %>" class="phone-link">
                        <i class="fas fa-phone"></i>
                        <%= u.numero_telefono %>
                      </a>
                    <% } else { %>
                      <span class="no-data">Non disponibile</span>
                    <% } %>
                  </div>
                </div>
                
                <% if (u.ruolo === 'pr' && u.percentuale_provvigione) { %>
                <div class="field">
                  <div class="field-label">Provvigione</div>
                  <div class="field-value">
                    <div class="percentage-badge">
                      <i class="fas fa-percentage"></i>
                      <%= u.percentuale_provvigione %>%
                    </div>
                  </div>
                </div>
                <% } %>
                
                <div class="field">
                  <div class="field-label">Potere Operativo</div>
                  <div class="field-value">
                    <div class="power-badge power-<%= u.potere_operativo ? 'yes' : 'no' %>">
                      <% if (u.potere_operativo) { %>
                        <i class="fas fa-check-circle"></i> S√¨
                      <% } else { %>
                        <i class="fas fa-times-circle"></i> No
                      <% } %>
                    </div>
                  </div>
                </div>
                
                <div class="field">
                  <div class="field-label">Supervisor</div>
                  <div class="field-value">
                    <% if (u.padre_nickname) { %>
                      <div class="parent-info">
                        <i class="fas fa-user-tie"></i>
                        <%= u.padre_nickname %>
                      </div>
                    <% } else { %>
                      <span class="no-data">Nessuno</span>
                    <% } %>
                  </div>
                </div>
                
                <div class="field field-full-width">
                  <div class="field-label">Team</div>
                  <div class="field-value">
                    <% const subordinati = figli.filter(f => f.padre_id === u.id); %>
                    <% if (subordinati.length > 0) { %>
                      <div class="team-summary">
                        <span class="count-badge"><%= subordinati.length %></span>
                        <span class="count-text">
                          membro<%= subordinati.length === 1 ? '' : 's' %> nel team
                        </span>
                      </div>
                      <div class="team-members">
                        <% subordinati.slice(0, 3).forEach(f => { %>
                          <span class="team-member-badge">
                            <i class="fas fa-user"></i>
                            <%= f.nickname %>
                          </span>
                        <% }) %>
                        <% if (subordinati.length > 3) { %>
                          <span class="team-member-badge more">
                            +<%= subordinati.length - 3 %>
                          </span>
                        <% } %>
                      </div>
                    <% } else { %>
                      <div class="no-team">
                        <i class="fas fa-user"></i>
                        <span>Lavora da solo</span>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
              
              <div class="card-actions">
                <button class="btn btn-primary-mobile edit-btn" 
                        data-id="<%= u.id %>"
                        title="Modifica utente">
                  <i class="fas fa-edit"></i>
                  Modifica
                </button>
                <% if (u.ruolo !== 'admin' || utenti.filter(admin => admin.ruolo === 'admin').length > 1) { %>
                      <button type="button" class="btn btn-danger-mobile"
                        data-id="<%= u.id %>" data-nickname="<%= u.nickname %>" data-ruolo="<%= u.ruolo %>"
                        title="Elimina utente">
                    <i class="fas fa-trash"></i>
                    Elimina
                  </button>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </main>

  <!-- Modal modifica utente -->
  <div id="editModal" class="modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2><i class="fas fa-user-edit"></i> Modifica Utente</h2>
        <span class="close">&times;</span>
      </div>
      
      <form id="editForm" method="POST" action="/admin/staff/edit">
        <input type="hidden" id="edit-id" name="id">
        <input type="hidden" id="edit-ruolo" name="ruolo">
        
        <div class="modal-body">
          <div class="form-row" style="gap: 0.8rem;">
            <div class="form-group" style="flex: 1; min-width: 0;">
              <label for="edit-nickname" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                <i class="fas fa-at"></i> Nickname *
              </label>
              <input type="text" id="edit-nickname" name="nickname" required maxlength="50" style="padding: 0.5rem; font-size: 0.9rem;">
            </div>
            
            <div class="form-group" style="flex: 1; min-width: 0;">
              <label for="edit-nome" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                <i class="fas fa-user"></i> Nome *
              </label>
              <input type="text" id="edit-nome" name="nome" required maxlength="50" style="padding: 0.5rem; font-size: 0.9rem;">
            </div>
          </div>
          
          <div class="form-row" style="gap: 0.8rem;">
            <div class="form-group" style="flex: 1; min-width: 0;">
              <label for="edit-cognome" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                <i class="fas fa-user"></i> Cognome *
              </label>
              <input type="text" id="edit-cognome" name="cognome" required maxlength="50" style="padding: 0.5rem; font-size: 0.9rem;">
            </div>
            
            <div class="form-group" style="flex: 1; min-width: 0;">
              <label for="edit-telefono" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                <i class="fas fa-phone"></i> Telefono *
              </label>
              <input type="tel" id="edit-telefono" name="numero_telefono" required pattern="[0-9]{8,15}" style="padding: 0.5rem; font-size: 0.9rem;">
            </div>
          </div>
          
          <div class="form-group">
            <label for="edit-password" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
              <i class="fas fa-lock"></i> Password
              <small style="font-size: 0.8rem;">(lascia vuoto per non cambiare)</small>
            </label>
            <div class="password-input-wrapper">
              <input type="password" id="edit-password" name="password" minlength="6" style="padding: 0.5rem; font-size: 0.9rem;">
              <button type="button" class="password-toggle" data-target="edit-password">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>
          
          <!-- Campo padre - solo per pre_admin e pr -->
          <div id="padre-field" style="display: none;">
            <div class="form-group">
              <label for="edit-padre" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                <i class="fas fa-user-tie"></i> Padre/Superiore
              </label>
              <select id="edit-padre" name="padre_id" style="padding: 0.5rem; font-size: 0.9rem;">
                <option value="">Nessun padre</option>
                <!-- Opzioni popolate dinamicamente -->
              </select>
            </div>
          </div>
          
          <!-- Campi specifici PR -->
          <div id="pr-fields" style="display: none;">
            <div class="form-row" style="gap: 0.8rem; align-items: flex-end;">
              <div class="form-group" style="flex: 1; min-width: 0;">
                <label for="edit-percentuale" style="font-size: 0.9rem; margin-bottom: 0.3rem;">
                  <i class="fas fa-percentage"></i> % Provvigione
                </label>
                <input type="number" id="edit-percentuale" name="percentuale_provvigione" 
                       min="0" max="100" step="0.01" placeholder="0.00" style="padding: 0.5rem; font-size: 0.9rem;">
              </div>
              
              <div class="form-group checkbox-group" style="flex: 0 0 auto; margin-bottom: 0;">
                <input type="hidden" name="poteri" value="0">
                <label class="checkbox-label" style="font-size: 0.9rem; padding: 0.5rem 0.8rem;">
                  <input type="checkbox" id="edit-poteri" name="poteri" value="1">
                  <span class="checkmark"></span>
                  <i class="fas fa-crown"></i> Poteri PR
                </label>
              </div>
            </div>
          </div>
        </div>
        
        <div class="modal-footer" style="padding-top: 1rem; gap: 0.5rem;">
          <button type="button" class="btn btn-secondary modal-cancel" style="padding: 0.6rem 1.2rem; font-size: 0.9rem;">
              <i class="fas fa-times"></i> Annulla
            </button>
          <button type="submit" class="btn btn-primary" style="padding: 0.6rem 1.2rem; font-size: 0.9rem;">
            <i class="fas fa-save"></i> Salva
          </button>
        </div>
      </form>
    </div>
  </div>

