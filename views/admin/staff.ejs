                    <div class="id-badge">
                      <strong><%= u.id %></strong>
                    </div>
                  </td>
                  <td class="td-nickname">
                    <div class="nickname-cell">
                      <div class="user-avatar">
                        <i class="fas fa-user"></i>
                      </div>
                      <strong class="nickname-text"><%= u.nickname %></strong>
                    </div>
                  </td>
                  <td class="td-role">
                    <span class="role-badge role-<%= u.ruolo %>">
                      <i class="fas fa-<%= u.ruolo === 'admin' ? 'crown' : u.ruolo === 'pre_admin' ? 'cog' : 'briefcase' %>"></i>
                      <%= u.ruolo === 'pre_admin' ? 'Pre-Admin' : u.ruolo.toUpperCase() %>
                    </span>
                  </td>
                  <td class="td-name">
                    <div class="name-cell">
                      <span class="full-name"><%= u.nome %> <%= u.cognome %></span>
                    </div>
                  </td>
                  <td class="td-phone">
                    <a href="tel:<%= u.numero_telefono %>" class="phone-link">
                      <i class="fas fa-phone"></i>
                      <span><%= u.numero_telefono %></span>
                    </a>
                  </td>
                  <td class="td-percentage">
                    <% if (u.percentuale_provvigione != null) { %>
                      <div class="percentage-badge">
                        <i class="fas fa-percentage"></i>
                        <strong><%= u.percentuale_provvigione %>%</strong>
                      </div>
                    <% } else { %>
                      <span class="no-data">-</span>
                    <% } %>
                  </td>
                  <td class="td-powers">
                    <% if (u.ruolo === 'pr') { %>
                      <span class="power-badge power-<%= u.poteri == 1 ? 'yes' : 'no' %>">
                        <i class="fas fa-<%= u.poteri == 1 ? 'check-circle' : 'times-circle' %>"></i>
                        <%= u.poteri == 1 ? 'ABILITATI' : 'DISABILITATI' %>
                      </span>
                    <% } else { %>
                      <span class="no-data">-</span>
                    <% } %>
                  </td>
                  <td class="td-parent">
                    <% if (u.padre_nickname) { %>
                      <div class="parent-info">
                        <i class="fas fa-user-tie"></i>
                        <strong><%= u.padre_nickname %></strong>
                      </div>
                    <% } else { %>
                      <span class="no-data">-</span>
                    <% } %>
                  </td>
                  <td class="td-subordinates">
                    <% const subordinati = figli.filter(f => f.padre_id === u.id); %>
                    <% if (subordinati.length > 0) { %>
                      <details class="subordinates-dropdown">
                        <summary class="subordinates-summary">
                          <i class="fas fa-users"></i>
                          <span class="count-badge"><%= subordinati.length %></span>
                          <span class="count-text">
                            member<%= subordinati.length === 1 ? '' : 's' %>
                          </span>
                          <i class="fas fa-chevron-down dropdown-arrow"></i>
                        </summary>
                        <div class="subordinates-content">
                          <% subordinati.forEach(f => { %>
                            <div class="subordinate-item">
                              <div class="subordinate-avatar">
                                <i class="fas fa-user"></i>
                              </div>
                              <div class="subordinate-info">
                                <strong class="subordinate-name"><%= f.nickname %></strong>
                                <span class="subordinate-role role-<%= f.ruolo %>">
                                  <%= f.ruolo === 'pre_admin' ? 'Pre-Admin' : f.ruolo.toUpperCase() %>
