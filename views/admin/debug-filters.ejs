<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Debug Filtri Admin - Aura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <h1 class="h2 mb-4">
                    <i class="bi bi-bug-fill text-warning me-2"></i>
                    Debug Filtri Admin - <%= currentAdmin %>
                </h1>
                
                <!-- Informazioni Admin Corrente -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>Admin Corrente</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>ID:</strong> <%= adminInfo.id %>
                            </div>
                            <div class="col-md-4">
                                <strong>Nickname:</strong> <%= adminInfo.nickname %>
                            </div>
                            <div class="col-md-4">
                                <strong>Nome Completo:</strong> <%= adminInfo.nome %> <%= adminInfo.cognome %>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Gerarchia Completa -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Gerarchia Completa</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <h6>Pre-Admin (<%= hierarchy.preAdminIds.length %>)</h6>
                                <% if (hierarchy.preAdminIds.length > 0) { %>
                                    <ul class="list-unstyled">
                                        <% hierarchy.preAdminIds.forEach(id => { %>
                                            <li><span class="badge bg-info">ID: <%= id %></span></li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    <p class="text-muted">Nessun Pre-Admin</p>
                                <% } %>
                            </div>
                            <div class="col-md-4">
                                <h6>PR Diretti (<%= hierarchy.directPrIds.length %>)</h6>
                                <% if (hierarchy.directPrIds.length > 0) { %>
                                    <ul class="list-unstyled">
                                        <% hierarchy.directPrIds.forEach(id => { %>
                                            <li><span class="badge bg-success">ID: <%= id %></span></li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    <p class="text-muted">Nessun PR diretto</p>
                                <% } %>
                            </div>
                            <div class="col-md-4">
                                <h6>PR Indiretti (<%= hierarchy.indirectPrIds.length %>)</h6>
                                <% if (hierarchy.indirectPrIds.length > 0) { %>
                                    <ul class="list-unstyled">
                                        <% hierarchy.indirectPrIds.forEach(id => { %>
                                            <li><span class="badge bg-warning text-dark">ID: <%= id %></span></li>
                                        <% }); %>
                                    </ul>
                                <% } else { %>
                                    <p class="text-muted">Nessun PR indiretto</p>
                                <% } %>
                            </div>
                        </div>
                        <div class="mt-3">
                            <strong>Totale PR Accessibili:</strong> 
                            <span class="badge bg-primary"><%= hierarchy.directPrIds.length + hierarchy.indirectPrIds.length %></span>
                        </div>
                    </div>
                </div>
                
                <!-- Filtro Generato -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtro Admin Generato</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>ID Admin:</strong> <%= adminFilter.adminId %>
                            </div>
                            <div class="col-md-4">
                                <strong>Pre-Admin IDs:</strong> 
                                <span class="badge bg-info"><%= adminFilter.preAdminIds.length %></span>
                            </div>
                            <div class="col-md-4">
                                <strong>PR IDs:</strong> 
                                <span class="badge bg-success"><%= adminFilter.prIds.length %></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Query SQL Generata -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-code-slash me-2"></i>Query SQL Filtrata</h5>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded" style="font-size: 12px; overflow-x: auto;"><%= filteredQuery %></pre>
                    </div>
                </div>
                
                <!-- Utenti Visibili -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-people me-2"></i>
                            Utenti Visibili (<%= visibleUsers.length %>)
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (visibleUsers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nickname</th>
                                            <th>Nome Completo</th>
                                            <th>Ruolo</th>
                                            <th>Padre</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% visibleUsers.forEach(user => { %>
                                            <tr>
                                                <td><%= user.id %></td>
                                                <td><%= user.nickname %></td>
                                                <td><%= user.nome %> <%= user.cognome %></td>
                                                <td>
                                                    <% if (user.ruolo === 'admin') { %>
                                                        <span class="badge bg-danger">Admin</span>
                                                    <% } else if (user.ruolo === 'pre_admin') { %>
                                                        <span class="badge bg-info">Pre-Admin</span>
                                                    <% } else { %>
                                                        <span class="badge bg-success">PR</span>
                                                    <% } %>
                                                </td>
                                                <td><%= user.padre_nickname || 'Nessuno' %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">Nessun utente visibile</p>
                        <% } %>
                    </div>
                </div>
                
                <!-- Azioni -->
                <div class="card">
                    <div class="card-body">
                        <a href="/admin/staff" class="btn btn-primary me-2">
                            <i class="bi bi-arrow-left me-1"></i>Torna allo Staff
                        </a>
                        <a href="/admin/organigramma" class="btn btn-success me-2">
                            <i class="bi bi-diagram-3 me-1"></i>Visualizza Organigramma
                        </a>
                        <button onclick="location.reload()" class="btn btn-secondary">
                            <i class="bi bi-arrow-clockwise me-1"></i>Ricarica Debug
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
