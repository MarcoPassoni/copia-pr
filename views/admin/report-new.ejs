<!-- Page header -->
<div class="page-header">
  <h1>
    <i class="fas fa-chart-bar"></i>
    Report e Organigramma
  </h1>
  <p>Analisi performance e struttura del team Aura per <%= meseCorrente %></p>
</div>

<!-- Navigation buttons -->
<div style="display: flex; gap: 1rem; margin-bottom: 2rem;">
  <a href="/admin/report" class="btn btn-primary">
    <i class="fas fa-chart-line"></i>
    Report
  </a>
  <a href="/admin/organigramma" class="btn btn-secondary">
    <i class="fas fa-sitemap"></i>
    Organigramma
  </a>
</div>

<!-- Main content -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-chart-bar"></i>
      Statistiche Totali
    </h2>
  </div>
  
  <!-- Statistiche Generali -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-number"><%= statisticheTotali.totalePR + statisticheTotali.totalePreAdmin %></div>
      <div class="stat-label">Staff Totale</div>
      <small><%= statisticheTotali.totalePR %> PR + <%= statisticheTotali.totalePreAdmin %> Pre-Admin</small>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-user-friends"></i>
      </div>
      <div class="stat-number"><%= statisticheTotali.totalePersonePortate %></div>
      <div class="stat-label">Persone Portate</div>
      <small>Totale storico</small>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-utensils"></i>
      </div>
      <div class="stat-number"><%= statisticheTotali.totaleTavoli %></div>
      <div class="stat-label">Tavoli Totali</div>
      <small>Approvati storicamente</small>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-euro-sign"></i>
      </div>
      <div class="stat-number">â‚¬<%= statisticheTotali.totaleProvvigioni.toFixed(2) %></div>
      <div class="stat-label">Provvigioni Totali</div>
      <small>Guadagni team</small>
    </div>

    <div class="stat-card">
      <div class="stat-icon">
        <i class="fas fa-chart-line"></i>
      </div>
      <div class="stat-number">â‚¬<%= statisticheTotali.totaleValoreStorico.toFixed(2) %></div>
      <div class="stat-label">Valore Storico</div>
      <small>Totale fatturato</small>
    </div>
  </div>
</div>

<!-- Team Performance -->
<div class="admin-card">
  <div class="card-header">
    <h2 class="card-title">
      <i class="fas fa-trophy"></i>
      Performance Team
    </h2>
  </div>

  <div class="table-container">
    <table class="admin-table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ruolo</th>
          <th>Persone Mese</th>
          <th>Tavoli Mese</th>
          <th>Provvigioni Mese</th>
          <th>Valore Mese</th>
          <th>Totale Persone</th>
          <th>Totale Tavoli</th>
          <th>Totale Provvigioni</th>
          <th>Totale Valore</th>
          <th>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% reportData.forEach(user => { %>
          <tr>
            <td><strong><%= user.nickname %></strong></td>
            <td>
              <span class="role-badge role-<%= user.ruolo %>">
                <%= user.ruolo === 'pre_admin' ? 'Pre-Admin' : user.ruolo.toUpperCase() %>
              </span>
            </td>
            <td><%= user.persone_portate_mese_originali || 0 %></td>
            <td><%= user.tavoli_approvati_mese_originali || 0 %></td>
            <td>â‚¬<%= (user.provvigioni_mese_originali || 0).toFixed(2) %></td>
            <td>â‚¬<%= (user.valore_mese_originali || 0).toFixed(2) %></td>
            <td><%= user.persone_totali_originali || 0 %></td>
            <td><%= user.tavoli_totali_originali || 0 %></td>
            <td>â‚¬<%= (user.provvigioni_totali_originali || 0).toFixed(2) %></td>
            <td>â‚¬<%= (user.valore_totali_originali || 0).toFixed(2) %></td>
            <td>
              <% if (user.ruolo === 'pr') { %>
                <button class="btn btn-sm btn-success" onclick="marcaPagato(<%= user.id %>)">
                  <i class="fas fa-check"></i>
                  Pagato
                </button>
              <% } else { %>
                <span style="color: #999;">N/A</span>
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<style>
  /* Additional styles for report page */
  .table-container {
    overflow-x: auto;
    margin-top: 1rem;
  }

  .role-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .role-admin {
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    color: white;
  }

  .role-pre_admin {
    background: linear-gradient(135deg, #f1c40f 0%, #f39c12 100%);
    color: white;
  }

  .role-pr {
    background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
    color: white;
  }

  .btn-sm {
    padding: 0.4rem 0.8rem;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
    
    .admin-table {
      font-size: 0.8rem;
    }
    
    .admin-table th,
    .admin-table td {
      padding: 0.5rem 0.25rem;
    }
  }
</style>

<script>
  // Additional chart dependencies
  document.head.appendChild(Object.assign(document.createElement('script'), {
    src: 'https://cdn.jsdelivr.net/npm/chart.js'
  }));
  
  document.head.appendChild(Object.assign(document.createElement('script'), {
    src: 'https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns'
  }));

  function marcaPagato(prId) {
    if (confirm('Sei sicuro di voler marcare questo PR come pagato? Le provvigioni saranno azzerate.')) {
      fetch('/admin/marca-pagato', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ prId })
      })
      .then(response => {
        if (response.ok) {
          alert('PR marcato come pagato!');
          location.reload();
        } else {
          alert('Errore durante l\'operazione');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Errore durante l\'operazione');
      });
    }
  }

  console.log('ðŸš€ Aura Report caricato!');
</script>
