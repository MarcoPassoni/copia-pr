  <script>
    let currentTable = '';
    let currentId = null;

    // Form templates per ogni tabella
    const formTemplates = {
      admin: [
        { name: 'nickname', label: 'Nickname', type: 'text', required: true },
        { name: 'nome', label: 'Nome', type: 'text', required: true },
        { name: 'cognome', label: 'Cognome', type: 'text', required: true },
        { name: 'numero_telefono', label: 'Telefono', type: 'text', required: true },
        { name: 'password', label: 'Password', type: 'password', required: true }
      ],
      pre_admin: [
        { name: 'nickname', label: 'Nickname', type: 'text', required: true },
        { name: 'nome', label: 'Nome', type: 'text', required: true },
        { name: 'cognome', label: 'Cognome', type: 'text', required: true },
        { name: 'numero_telefono', label: 'Telefono', type: 'text', required: true },
        { name: 'password', label: 'Password', type: 'password', required: true },
        { name: 'fk_admin', label: 'ID Admin Padre', type: 'number', required: false }
      ],
      pr: [
        { name: 'nickname', label: 'Nickname', type: 'text', required: true },
        { name: 'nome', label: 'Nome', type: 'text', required: true },
        { name: 'cognome', label: 'Cognome', type: 'text', required: true },
        { name: 'numero_telefono', label: 'Telefono', type: 'text', required: true },
        { name: 'password', label: 'Password', type: 'password', required: true },
        { name: 'fk_padre', label: 'ID Padre', type: 'number', required: false },
        { name: 'poteri', label: 'Poteri', type: 'number', required: true, value: 0 },
        { name: 'percentuale_provvigione', label: 'Percentuale Provvigione', type: 'number', required: true, value: 10 },
        { name: 'provvigioni_da_pagare', label: 'Provvigioni da Pagare (â‚¬)', type: 'number', step: '0.01', value: 0 },
        { name: 'tot_persone_portate', label: 'Totale Persone Portate', type: 'number', value: 0 },
        { name: 'tot_spesa_tavolo', label: 'Totale Spesa Tavolo (â‚¬)', type: 'number', step: '0.01', value: 0 }
      ],
      richieste_tavoli: [
        { name: 'pr_id', label: 'ID PR', type: 'number', required: true },
        { name: 'data', label: 'Data (YYYY-MM-DD)', type: 'date', required: true },
        { name: 'nome_tavolo', label: 'Nome Tavolo', type: 'text', required: true },
        { name: 'numero_persone', label: 'Numero Persone', type: 'number', required: true },
        { name: 'spesa_prevista', label: 'Spesa Prevista (â‚¬)', type: 'number', step: '0.01', required: true },
        { name: 'omaggi', label: 'Omaggi', type: 'text', required: false },
        { name: 'note_tavolo', label: 'Note Tavolo', type: 'textarea', required: false },
        { name: 'stato', label: 'Stato', type: 'select', required: true, options: ['in attesa', 'approvata', 'rifiutata'] }
      ],
      storico_tavoli: [
        { name: 'pr_id', label: 'ID PR', type: 'number', required: true },
        { name: 'data', label: 'Data (YYYY-MM-DD)', type: 'date', required: true },
        { name: 'nome_tavolo', label: 'Nome Tavolo', type: 'text', required: true },
        { name: 'numero_persone', label: 'Numero Persone', type: 'number', required: true },
        { name: 'spesa_prevista', label: 'Spesa Prevista (â‚¬)', type: 'number', step: '0.01', required: true },
        { name: 'omaggi', label: 'Omaggi', type: 'text', required: false },
        { name: 'note_tavolo', label: 'Note Tavolo', type: 'textarea', required: false }
      ]
    };

    function showAddForm(table) {
      currentTable = table;
      currentId = null;
      document.getElementById('modalTitle').textContent = `Aggiungi ${getTableDisplayName(table)}`;
      generateForm(table);
      document.getElementById('recordModal').style.display = 'block';
    }

    function editRecord(table, id) {
      currentTable = table;
      currentId = id;
      document.getElementById('modalTitle').textContent = `Modifica ${getTableDisplayName(table)} #${id}`;
      
      // Fetch current data and populate form
      fetch(`/admin/database/${table}/${id}`)
        .then(response => response.json())
        .then(data => {
          generateForm(table, data);
          document.getElementById('recordModal').style.display = 'block';
        })
        .catch(error => {
          console.error('Errore:', error);
          alert('Errore nel caricamento dei dati');
        });
    }

    function deleteRecord(table, id, name) {
      if (confirm(`Sei sicuro di voler eliminare "${name}" dalla tabella ${getTableDisplayName(table)}?`)) {
        fetch(`/admin/database/${table}/${id}`, {
          method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Record eliminato con successo');
            location.reload();
          } else {
            alert('Errore nell\'eliminazione: ' + data.error);
          }
        })
        .catch(error => {
          console.error('Errore:', error);
          alert('Errore nella richiesta');
        });
      }
    }

    function generateForm(table, data = {}) {
      const fields = formTemplates[table];
      const formContainer = document.getElementById('formFields');
      formContainer.innerHTML = '';

      fields.forEach(field => {
        const formGroup = document.createElement('div');
        formGroup.className = 'form-group';

        const label = document.createElement('label');
        label.textContent = field.label;
        label.setAttribute('for', field.name);
        formGroup.appendChild(label);

        let input;
        if (field.type === 'textarea') {
          input = document.createElement('textarea');
        } else if (field.type === 'select') {
          input = document.createElement('select');
          if (field.options) {
            field.options.forEach(option => {
              const optionElement = document.createElement('option');
              optionElement.value = option;
              optionElement.textContent = option;
              input.appendChild(optionElement);
            });
          }
        } else {
          input = document.createElement('input');
          input.type = field.type;
        }

        input.name = field.name;
        input.id = field.name;
        input.required = field.required || false;

        if (field.step) input.step = field.step;
        if (field.value !== undefined) input.value = field.value;
        if (data[field.name] !== undefined) input.value = data[field.name];

        formGroup.appendChild(input);
        formContainer.appendChild(formGroup);
      });
    }

    function getTableDisplayName(table) {
      const names = {
        admin: 'Amministratore',
        pre_admin: 'Pre-Amministratore',
        pr: 'PR',
        richieste_tavoli: 'Richiesta Tavolo',
        storico_tavoli: 'Storico Tavolo'
      };
      return names[table] || table;
    }

    function closeModal() {
      document.getElementById('recordModal').style.display = 'none';
    }

    // Handle form submission
    document.getElementById('recordForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const data = {};
      
      for (let [key, value] of formData.entries()) {
        data[key] = value;
      }

      const url = currentId 
        ? `/admin/database/${currentTable}/${currentId}`
        : `/admin/database/${currentTable}`;
      
      const method = currentId ? 'PUT' : 'POST';

      fetch(url, {
        method: method,
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
      .then(response => response.json())
      .then(result => {
        if (result.success) {
          alert(currentId ? 'Record aggiornato con successo' : 'Record aggiunto con successo');
          closeModal();
          location.reload();
        } else {
          alert('Errore: ' + result.error);
        }
      })
      .catch(error => {
        console.error('Errore:', error);
        alert('Errore nella richiesta');
      });
    });

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('recordModal');
      if (event.target === modal) {
        closeModal();
      }
    }
  </script>
