      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </div>
  <div class="main-content">
    <div class="content-header">
      <h1><i class="fas fa-database"></i> Gestione Database</h1>
      <p class="content-subtitle">Controllo completo di tutte le tabelle del sistema</p>
    </div>

    <!-- Statistiche Generali -->
    <div class="db-stats">
      <div class="stat-card">
        <i class="fas fa-users-cog"></i>
        <div class="stat-info">
          <h3><%= dbStats.admin %></h3>
          <p>Amministratori</p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-user-shield"></i>
        <div class="stat-info">
          <h3><%= dbStats.pre_admin %></h3>
          <p>Pre-Admin</p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-handshake"></i>
        <div class="stat-info">
          <h3><%= dbStats.pr %></h3>
          <p>PR Staff</p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-clock"></i>
        <div class="stat-info">
          <h3><%= dbStats.richieste %></h3>
          <p>Richieste Pending</p>
        </div>
      </div>
      <div class="stat-card">
        <i class="fas fa-check-circle"></i>
        <div class="stat-info">
          <h3><%= dbStats.storico %></h3>
          <p>Tavoli Approvati</p>
        </div>
      </div>
    </div>

    <!-- Sezione Admin -->
    <div class="db-section">
      <div class="section-header">
        <h2><i class="fas fa-crown"></i> Tabella Amministratori</h2>
        <button class="btn-add" onclick="showAddForm('admin')">
          <i class="fas fa-plus"></i> Aggiungi Admin
        </button>
      </div>
      
      <div class="table-container">
        <table class="db-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nickname</th>
              <th>Nome</th>
              <th>Cognome</th>
              <th>Telefono</th>
              <th>Password Hash</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% adminData.forEach(admin => { %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.nickname %></td>
              <td><%= admin.nome %></td>
              <td><%= admin.cognome %></td>
              <td><%= admin.numero_telefono %></td>
              <td><span class="password-hash"><%= admin.password.substring(0, 20) %>...</span></td>
              <td class="action-buttons">
                <button class="btn-edit" onclick="editRecord('admin', <%= admin.id %>)">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-delete" onclick="deleteRecord('admin', <%= admin.id %>, '<%= admin.nickname %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
            <% if (adminData.length === 0) { %>
            <tr><td colspan="7" class="no-data">Nessun amministratore trovato</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sezione Pre-Admin -->
    <div class="db-section">
      <div class="section-header">
        <h2><i class="fas fa-user-graduate"></i> Tabella Pre-Amministratori</h2>
        <button class="btn-add" onclick="showAddForm('pre_admin')">
          <i class="fas fa-plus"></i> Aggiungi Pre-Admin
        </button>
      </div>
      
      <div class="table-container">
        <table class="db-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nickname</th>
              <th>Nome</th>
              <th>Cognome</th>
              <th>Telefono</th>
              <th>Password Hash</th>
              <th>Admin ID</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% preAdminData.forEach(pa => { %>
            <tr>
              <td><%= pa.id %></td>
              <td><%= pa.nickname %></td>
              <td><%= pa.nome %></td>
              <td><%= pa.cognome %></td>
              <td><%= pa.numero_telefono %></td>
              <td><span class="password-hash"><%= pa.password.substring(0, 20) %>...</span></td>
              <td><%= pa.fk_admin || 'NULL' %></td>
              <td class="action-buttons">
                <button class="btn-edit" onclick="editRecord('pre_admin', <%= pa.id %>)">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-delete" onclick="deleteRecord('pre_admin', <%= pa.id %>, '<%= pa.nickname %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
            <% if (preAdminData.length === 0) { %>
            <tr><td colspan="8" class="no-data">Nessun pre-amministratore trovato</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sezione PR -->
    <div class="db-section">
      <div class="section-header">
        <h2><i class="fas fa-users"></i> Tabella Public Relations</h2>
        <button class="btn-add" onclick="showAddForm('pr')">
          <i class="fas fa-plus"></i> Aggiungi PR
        </button>
      </div>
      
      <div class="table-container">
        <table class="db-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nickname</th>
              <th>Nome</th>
              <th>Cognome</th>
              <th>Telefono</th>
              <th>Password Hash</th>
              <th>Padre ID</th>
              <th>Poteri</th>
              <th>Provvigioni %</th>
              <th>Provvigioni â‚¬</th>
              <th>Tot. Persone</th>
              <th>Tot. Spesa</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% prData.forEach(pr => { %>
            <tr>
              <td><%= pr.id %></td>
              <td><%= pr.nickname %></td>
              <td><%= pr.nome %></td>
              <td><%= pr.cognome %></td>
              <td><%= pr.numero_telefono %></td>
              <td><span class="password-hash"><%= pr.password.substring(0, 15) %>...</span></td>
              <td><%= pr.fk_padre || 'NULL' %></td>
              <td><span class="badge-power"><%= pr.poteri %></span></td>
              <td><%= pr.percentuale_provvigione %>%</td>
              <td>â‚¬<%= pr.provvigioni_da_pagare.toFixed(2) %></td>
              <td><%= pr.tot_persone_portate %></td>
              <td>â‚¬<%= pr.tot_spesa_tavolo.toFixed(2) %></td>
              <td class="action-buttons">
                <button class="btn-edit" onclick="editRecord('pr', <%= pr.id %>)">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-delete" onclick="deleteRecord('pr', <%= pr.id %>, '<%= pr.nickname %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
            <% if (prData.length === 0) { %>
            <tr><td colspan="13" class="no-data">Nessun PR trovato</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sezione Richieste Tavoli -->
    <div class="db-section">
      <div class="section-header">
        <h2><i class="fas fa-clock"></i> Richieste Tavoli Pending</h2>
        <button class="btn-add" onclick="showAddForm('richieste_tavoli')">
          <i class="fas fa-plus"></i> Aggiungi Richiesta
        </button>
      </div>
      
      <div class="table-container">
        <table class="db-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>PR ID</th>
              <th>Data</th>
              <th>Nome Tavolo</th>
              <th>Persone</th>
              <th>Spesa Prev.</th>
              <th>Omaggi</th>
              <th>Note</th>
              <th>Stato</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% richiesteData.forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.pr_id %></td>
              <td><%= r.data %></td>
              <td><%= r.nome_tavolo %></td>
              <td><%= r.numero_persone %></td>
              <td>â‚¬<%= r.spesa_prevista.toFixed(2) %></td>
              <td><%= r.omaggi || 'N/A' %></td>
              <td><%= r.note_tavolo || 'N/A' %></td>
              <td><span class="badge-status <%= r.stato.replace(' ', '-') %>"><%= r.stato %></span></td>
              <td class="action-buttons">
                <button class="btn-edit" onclick="editRecord('richieste_tavoli', <%= r.id %>)">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-delete" onclick="deleteRecord('richieste_tavoli', <%= r.id %>, '<%= r.nome_tavolo %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
            <% if (richiesteData.length === 0) { %>
            <tr><td colspan="10" class="no-data">Nessuna richiesta pending</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sezione Storico Tavoli -->
    <div class="db-section">
      <div class="section-header">
        <h2><i class="fas fa-history"></i> Storico Tavoli Approvati</h2>
        <button class="btn-add" onclick="showAddForm('storico_tavoli')">
          <i class="fas fa-plus"></i> Aggiungi Storico
        </button>
      </div>
      
      <div class="table-container">
        <table class="db-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>PR ID</th>
              <th>Data</th>
              <th>Nome Tavolo</th>
              <th>Persone</th>
              <th>Spesa Prev.</th>
              <th>Omaggi</th>
              <th>Note</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody>
            <% storicoData.forEach(s => { %>
            <tr>
              <td><%= s.id %></td>
              <td><%= s.pr_id %></td>
              <td><%= s.data %></td>
              <td><%= s.nome_tavolo %></td>
              <td><%= s.numero_persone %></td>
              <td>â‚¬<%= s.spesa_prevista.toFixed(2) %></td>
              <td><%= s.omaggi || 'N/A' %></td>
              <td><%= s.note_tavolo || 'N/A' %></td>
              <td class="action-buttons">
                <button class="btn-edit" onclick="editRecord('storico_tavoli', <%= s.id %>)">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-delete" onclick="deleteRecord('storico_tavoli', <%= s.id %>, '<%= s.nome_tavolo %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
            <% if (storicoData.length === 0) { %>
            <tr><td colspan="9" class="no-data">Nessun record storico</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal per aggiungere/modificare record -->
  <div id="recordModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="modalTitle">Aggiungi Record</h3>
        <span class="close" onclick="closeModal()">&times;</span>
      </div>
      <div class="modal-body">
        <form id="recordForm">
          <div id="formFields"></div>
          <div class="form-actions">
            <button type="button" class="btn-cancel" onclick="closeModal()">Annulla</button>
            <button type="submit" class="btn-save">Salva</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
