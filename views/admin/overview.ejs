<div class="overview-container">
    <div class="overview-header">
        <div class="header-content">
            <div>
                <h1>üìä Overview Generale</h1>
                <p>Vista riepilogativa completa di tutti gli amministratori e i loro risultati</p>
            </div>
            <div class="header-actions">
                <a href="/admin/overview/export-excel" class="btn-export-excel" title="Esporta in formato Excel">
                    <i class="fas fa-file-excel"></i> Esporta Excel
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card highlight">
            <div class="stat-label">üí∞ Costo Totale Tavoli</div>
            <div class="stat-value">
                ‚Ç¨ <%= totals.totalCostoTavoli.toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
            </div>
            <div class="stat-subtitle">Di tutti i PR sotto tutti gli admin</div>
        </div>

        <div class="stat-card highlight">
            <div class="stat-label">üéÅ Guadagno Complessivo</div>
            <div class="stat-value">
                ‚Ç¨ <%= totals.totalGuadagnoComplessivo.toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
            </div>
            <div class="stat-subtitle">5% di tutti i tavoli</div>
        </div>

        <div class="stat-card">
            <div class="stat-label">üë• Admin Attivi</div>
            <div class="stat-value"><%= adminBreakdown.length %></div>
            <div class="stat-subtitle">Nel sistema</div>
        </div>

        <div class="stat-card">
            <div class="stat-label">üéØ PR Totali</div>
            <div class="stat-value"><%= totals.totalPR %></div>
            <div class="stat-subtitle">Sotto tutti gli admin</div>
        </div>
    </div>

    <!-- Admin Breakdown Table -->
    <div class="admin-breakdown">
        <div class="breakdown-header">
            üìã Dettaglio per Amministratore
        </div>
        <% if (adminBreakdown.length > 0) { %>
            <table class="breakdown-table">
                <thead>
                    <tr>
                        <th>Admin</th>
                        <th>PR nella Gerarchia</th>
                        <th>Costo Totale Tavoli</th>
                        <th>Guadagno (5%)</th>
                        <th>% sul Totale</th>
                    </tr>
                </thead>
                <tbody>
                    <% adminBreakdown.forEach(admin => { %>
                        <tr>
                            <td>
                                <div class="admin-name">
                                    <i class="fas fa-user-shield"></i>
                                    <%= admin.nickname %>
                                </div>
                            </td>
                            <td>
                                <span class="pr-count">
                                    <%= admin.prCount %>
                                </span>
                            </td>
                            <td>
                                <span class="cost-value">
                                    ‚Ç¨ <%= admin.costoTavoli.toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                </span>
                            </td>
                            <td>
                                <span class="earnings-value">
                                    ‚Ç¨ <%= admin.guadagno.toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                </span>
                            </td>
                            <td>
                                <div>
                                    <%= admin.percentuale.toFixed(1) %>%
                                    <div class="percentage-bar">
                                        <div class="percentage-fill" style="width: <%= admin.percentuale %>%"></div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="no-data">
                <i class="fas fa-info-circle"></i>
                Nessun amministratore trovato
            </div>
        <% } %>
    </div>

    <!-- Additional Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">üí° Info</div>
            <div class="stat-value" style="font-size: 1.5em;">
                <%= adminBreakdown.length %> Admin
            </div>
            <div class="stat-subtitle">
                gestiscono <%= totals.totalPR %> PR
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-label">üíµ Valore Medio Tavolo</div>
            <div class="stat-value" style="font-size: 1.5em;">
                <% 
                const tavoliCount = adminBreakdown.reduce((sum, admin) => {
                    return sum + admin.prCount;
                }, 0);
                const avgValue = tavoliCount > 0 ? totals.totalCostoTavoli / tavoliCount : 0;
                %>
                ‚Ç¨ <%= avgValue.toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-label">üìä Media Guadagno per Admin</div>
            <div class="stat-value" style="font-size: 1.5em;">
                ‚Ç¨ <%= (totals.totalGuadagnoComplessivo / Math.max(adminBreakdown.length, 1)).toLocaleString('it-IT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-label">üìà Media PR per Admin</div>
            <div class="stat-value" style="font-size: 1.5em;">
                <%= (totals.totalPR / Math.max(adminBreakdown.length, 1)).toFixed(1) %>
            </div>
        </div>
    </div>
</div>

